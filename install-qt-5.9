#!/bin/sh

echo Downloading Qt

DOWNLOAD_URL=https://download.qt.io/archive/online_installers/3.0/qt-unified-linux-x64-3.0.0-online.run
INSTALLER=`basename $DOWNLOAD_URL`
ENVFILE=qt-5.9.env

wget -c $DOWNLOAD_URL

echo Installing Qt
QT_CI_PACKAGES="qt.59.gcc_64" extract-qt-installer $PWD/$INSTALLER $PWD/Qt

echo Create $ENVFILE
cat << EOF > $ENVFILE
export PATH=$PWD/Qt/5.9/gcc_64/bin:$PATH
EOF
